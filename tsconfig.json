{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES6", "DOM"],
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "./lib",
    "importHelpers": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "noUnusedLocals": false,
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}

{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2018", "ES6", "DOM"],
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "noUnusedLocals": false,
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    ".yalc/**/*"
  ]
}

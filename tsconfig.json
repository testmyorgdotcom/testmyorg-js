{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES6", "DOM"],
    "declaration": true,
    "outDir": "./out",
    "importHelpers": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": "./src",
    "noUnusedLocals": false,
    "paths": {
      "@/*": ["*"],
      "@data": ["data"],
      "@persona": ["persona"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
